<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/glass_background"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/paivaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Päivämäärä"
            android:textSize="24dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/paikkaTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Paikka"
            android:layout_gravity="end"
            android:textSize="24dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/lampotilaTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_weight="1"
        android:text="Lämpotila"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/tekstiTextView"
        android:layout_width="314dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Teksti"
        android:textSize="24dp" />

    <Button
        android:id="@+id/poistaButton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/vaaleansininen"
        android:text="Poista"
        android:textSize="24dp"
        app:icon="@drawable/trashcan" />
</LinearLayout>
